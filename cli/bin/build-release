#!/usr/bin/env bash

package_name="go-bb"

platforms=("darwin/amd64" "linux/amd64")

for platform in "${platforms[@]}"
do
    platform_split=(${platform//\// })
    GOOS=${platform_split[0]}
    GOARCH=${platform_split[1]}
    if [ $GOOS = "windows" ]; then
        output_name+='.exe'
    fi

    env GOOS=$GOOS GOARCH=$GOARCH go build -ldflags "-s -w -X main.BuildSHA=`git rev-parse --short HEAD`" -o $package_name cmd/*.go

    upx --brute $package_name

    cliVersion=$(go-bb --version | cut -d' ' -f3-)
    output_name=$package_name'-'$cliVersion'-'$GOOS'-'$GOARCH

    zip -9 target/${output_name}.zip $package_name
    rm -rf $package_name

    if [ $? -ne 0 ]; then
        echo 'An error has occurred! Aborting the script execution...'
        exit 1
    fi
done